{
  "manifest_version": 2,
  "name": "Email Hover Footnotes",
  "short_name": "Email-hover-footnotes",
  "version": "1.0",
  "author": "Keith Mosher",

  "description": "Finds footnotes in emails and makes their contents appear when you hover over them. Currently only works with Gmail.",

  "icons": {
	  "16": "icons/icon-16.png",
	  "48": "icons/icon-48.png",
	  "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [ "*://mail.google.com/*" ],
      "js": [
        "vendor/jquery.min.js",
        "vendor/mutation-summary.js",
        "vendor/bootstrap/bootstrap.bundle.min.js",
        "src/extension.js"
      ],
      "css": [
        "vendor/bootstrap/bootstrap.min.css",
        "src/extension.css"
      ]
    }
  ]
}
